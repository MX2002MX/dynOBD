<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luisa.alex.obd2_peek.MainActivity">

    <!--============START/STOP BUTTONS===========-->
    <!-- Start Trip -->
    <Button
        android:id="@+id/btn_Main_startTrip"
        android:text="@string/btn_Main_start_trip"
        android:onClick="startTripClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!-- END Trip -->
    <Button
        android:id="@+id/btn_Main_endTrip"
        android:text="@string/btn_Main_end_trip"
        android:onClick="endTripClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!--===========GAUGES===========-->
    <!-- Speed Gauge -->
    <RelativeLayout
        android:id="@+id/speed_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_test_buttons">

        <TextView
            android:id="@+id/lbl_speed"
            android:text="Speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:id="@+id/gauge_speed"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"

            app:gaugePointStartColor="@color/md_red_500"
            app:gaugePointEndColor="@color/md_red_500"
            app:gaugePointSize="6"
            app:gaugeStartAngle="135"
            app:gaugeStrokeCap="ROUND"
            app:gaugeStrokeColor="@color/md_grey_400"
            app:gaugeStrokeWidth="10dp"
            app:gaugeStartValue="0"
            app:gaugeEndValue="@string/param_gauge_max_speed"
            app:gaugeSweepAngle="270"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/gaugeView_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gauge_speed"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- Throttle Gauge-->
    <LinearLayout
        android:id="@+id/rpm_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_rpm"
            android:text="RPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:id="@+id/gauge_rpm"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/lbl_rpm"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-80dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:gaugeEndValue="@string/param_gauge_max_rpm"
            app:gaugePointEndColor="@color/md_red_500"
            app:gaugePointStartColor="@color/md_green_500"
            app:gaugeStartAngle="180"
            app:gaugeStartValue="0"
            app:gaugeStrokeCap="BUTT"
            app:gaugeStrokeColor="@color/md_grey_400"
            app:gaugeStrokeWidth="20dp"
            app:gaugeSweepAngle="180"
            app:gaugeDividerSize="1"
            app:gaugeDividerColor="@color/md_yellow_500"
            app:gaugeDividerStep="10"
            app:gaugeDividerDrawFirst="false"
            app:gaugeDividerDrawLast="true" />

        <TextView
            android:id="@+id/gaugeView_rpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gauge_rpm"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/gauge_rpm"
            android:layout_marginBottom="18dp"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <!--===========TESTING BUTTONS===========-->
    <RelativeLayout
        android:id="@+id/layout_test_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <!-- Enable Button -->
        <Button
            android:id="@+id/btn_TEST_enableBT"
            android:text="@string/btn_TEST_enableBT"
            android:onClick="enableBTBtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <!-- Connect Button -->
        <Button
            android:id="@+id/btn_TEST_connect_async"
            android:text="@string/btn_TEST_connect"
            android:onClick="connectBtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_TEST_enableBT" />

        <!-- Disconnect Button -->
        <Button
            android:id="@+id/btn_TEST_disconnect_async"
            android:text="@string/btn_TEST_disconnect"
            android:onClick="disconnectBtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_TEST_connect_async"
            />

        <!-- Test button -->
        <Button
            android:id="@+id/btn_TEST_test"
            android:text="@string/btn_TEST_test"
            android:onClick="testBtnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_TEST_disconnect_async" />
    </RelativeLayout>

</LinearLayout>
