<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luisa.alex.obd2_peek.MainActivity">

    <!--=========BUTTONS===========-->

    <Button
        android:id="@+id/btn_Main_disconnect"
        android:text="@string/btn_Main_disconnect"
        android:onClick="disconnectBtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_Main_test"
        android:text="@string/btn_Main_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonTest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <!--=========TEXT VIEWS===========-->

    <TextView
        android:text="@string/speed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:id="@+id/speed_result"
        android:layout_below="@+id/btn_Main_enableBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:text="@string/fuelCR_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:id="@+id/fuelCR_result"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/rpm_result"
        android:layout_alignStart="@+id/rpm_result" />

    <TextView
        android:text="@string/rpm_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:id="@+id/rpm_result"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/speed_result"
        android:layout_alignStart="@+id/speed_result" />

    <Button
        android:id="@+id/btn_Main_enableBT"
        android:text="@string/btn_Main_enableBT"
        android:onClick="enableBTBtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_Main_connect"
        android:text="@string/btn_Main_connect"
        android:onClick="connectBtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/fuelCR_result" />


</RelativeLayout>
